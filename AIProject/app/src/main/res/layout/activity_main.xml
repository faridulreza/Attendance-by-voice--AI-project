<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">


    <Button
        android:id="@+id/create_batch"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="470dp"
        android:layout_marginBottom="8dp"
        android:background="@color/cardview_dark_background"
        android:text="Create Batch"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="294dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:accessibilityLiveRegion="polite"
        android:text="Attendance System"
        android:textSize="24sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/take_attendance"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="248dp"
        android:text="Take Attendance"
        android:textStyle="bold" />


    <Button
        android:id="@+id/view_record_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="248dp"
        android:text="View Records"
        android:textStyle="bold" />

    <Button
        android:id="@+id/get_voice_sample"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="310dp"
        android:layout_marginBottom="248dp"
        android:text="Get Voice Sample"
        android:textStyle="bold"
        app:iconTint="@color/black" />


    <Button
        android:id="@+id/create_class"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="390dp"
        android:layout_marginBottom="8dp"
        android:background="@color/cardview_dark_background"
        android:text="Create Course"
        android:textStyle="bold" />


    <Button
        android:id="@+id/train_model"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="549dp"
        android:layout_marginBottom="8dp"
        android:background="@color/cardview_dark_background"
        android:text="Train Model"
        android:textStyle="bold" />


</RelativeLayout>